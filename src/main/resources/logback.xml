<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{dd-MM-yyyy HH:mm:ss.SSS}) %red([%thread]) %highlight(%-5level) %boldCyan(%logger{36}).%cyan(%M) - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>